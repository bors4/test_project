{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "strictFunctionTypes": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pageobjects/*"],
      "@helpers/*": ["src/helpers/*"],
      "@steps/*": ["src/step-definitions/*"]
    },
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "alwaysStrict": false
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "features/**/*",
    "wdio.conf.js",
    "cucumber.js",
    "cucumber.conf.js",
    "types/**/*"
  ],
  "exclude": ["node_modules", "dist", "coverage", ".git", "reports", "logs"]
}
